
extends ../layout/main
block variable
  -
    var title_page = 'contact'
    var id_page = 'id-page-contact'
    var class_page = 'class-page-contact'
    var breadcrumbsSubitem = [
      {
        label: 'Контакти',
        link: pagesLink[0].contact
      }
    ]

block meta
  title= title_page
  meta(name='description' content='')
block head
  link(rel='stylesheet' href="./assets/styles/main.min.css")
block scripts
  script(defer src='./assets/scripts/vendors.bundle.js')
  script(defer src='./assets/scripts/index.bundle.js')
  script(defer src='./assets/scripts/libs.js')
  script(defer src='./assets/scripts/header.js')
  script(defer src='./assets/scripts/footer.js')
  script(defer src='./assets/scripts/contact.js')
  //- script(defer src='./assets/scripts/animation.js')
block content
  include ../includes/breadcrumbs.pug
  .contact#up.container-side-padding
    .contact__wrapper.row-flex
      .title-big Контакти
      .contact__left
        form.home-contact--width(data-home-contact='' autocomplete='off')
          h2.title-inner-page.home-contact--width Виникли питання?
          .small-text.mb50.home-contact--width Отримайте детальний прорахунок від нашого менеджера всього за 5 хвилин
          .form-field.form-field-input.mb30(data-field-input='' data-field-name='' data-status='field--inactive' data-animation='none')
            .form-field-message Ваше ім`я:
            input.form-field__input(type='text' name='name' placeholder='Ім`я*' maxlength='31')
            .input-message(data-input-message='')
          .form-field.disabled.form-field-input(data-field-input='' data-field-phone='' data-status='field--inactive' data-animation='none')
            .form-field-message Телефон
            input.form-field__input.input-tel(type='tel' name='phone' placeholder='' inputmode='tel')
            span.place-holder + 38 ___-___-__-__
            .mask-absolute.js-mask-absolute
            .input-message(data-input-message='')
          .small-text.mt50.home-contact--width Натискаючи на кнопку, Ви погоджуєтесь з обробкою персональних даних. 
          .form-btn-wrap.df.jcsb.aic
            button.button.button-green.home-contact-btn--size(type='submit' data-btn-submit='data-btn-submit') Надіслати
              div(data-btn-submit-text='' style='display:none')
      .contact__right
        .contact__right-map.map 
          #map
        .contact__right-items
          .contact__right-item.contact__right-item-1
            h3.subtitle відділ продажу:
            .text м. Вінниця, вул. Максимовича, 6
          .contact__right-item.contact__right-item-2
            h3.subtitle телефон:
            .text
              a(href="tel:+380671106104") +38 067 110 61 04 
          .contact__right-item.contact__right-item-3
            h3.subtitle будівництво:
            .text м. Вінниця, вул. Максимовича, 21
          .contact__right-item.contact__right-item-4
            h3.subtitle e-mail:
            .text
              a(href='mailto:zkforesthome@gmail.com') zkforesthome@gmail.com
          .contact__right-item.contact__right-item-5
            h3.subtitle графік роботи:
            .text.mb10 Пн-Сб: 09:00-19:00
            .text Нд: 10:00-17:00
          .contact__right-item.contact__right-item-6
            h3.subtitle Соціальні мережі:
            .text.dg
              a(href='https://www.facebook.com' target='_blank') facebook 
              a(href='https://www.instagram.com/' target='_blank') instagram
          .contact__right-item.contact__right-item-7
            a(href='#').button.button-transparent подивитись на карті
    .footer.row-flex
      .footer__content
        .footer__content-item.small-text
          span.year
          a(href="#")  ЖК Forest home.
          span  Всі права захищені.
        .footer__content-item
          .footer__content-item-img
            a(href="https://smarto.agency/" target="_blank") 
              img(src="./assets/images/img/smartorange.svg" alt="smartorange")

//- block footer
